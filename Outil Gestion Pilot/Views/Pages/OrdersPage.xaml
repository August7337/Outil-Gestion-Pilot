<Page
    x:Class="Outil_Gestion_Pilot.Views.Pages.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Outil_Gestion_Pilot.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="OrdersPage"
    d:DataContext="{d:DesignInstance local:OrdersPage, IsDesignTimeCreatable=False}"

    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top" >
        <StackPanel >
            <StackPanel Orientation="Horizontal" >
            <StackPanel   Margin="0,0,20,0">
                <Label>Nom Revendeur:</Label>
                <ui:TextBox 
                  Width="150"
                  PlaceholderText="Entrer un revendeur" 
                  x:Name="searchResellerTxt" 
                  Text="{Binding SearchReseller, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>


            </StackPanel>

            <StackPanel>
                <Label>Date commande :</Label>
                <DatePicker 
            Width="150"
            SelectedDate="{Binding SelectedOrderDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </StackPanel>
        <DataGrid
         x:Name="OrderDG"
         AutoGenerateColumns="False"
         IsReadOnly="True"
         ItemsSource="{Binding OrdersView}">
            <DataGrid.Columns>
                <DataGridTextColumn
                 Width="*"
                 Binding="{Binding Reseller}"
                 Header="Revendeur" />
                <DataGridTextColumn
                 Width="*"
                 Binding="{Binding OrderDate}"
                 Header="Date" />


            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Page>
