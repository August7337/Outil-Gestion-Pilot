<Page x:Class="Outil_Gestion_Pilot.Views.Pages.OrderVisualisationPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:local="clr-namespace:Outil_Gestion_Pilot.Views.Pages"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
 Title="CartPage"
 d:DataContext="{d:DesignInstance local:CartPage,IsDesignTimeCreatable=False}"
 d:DesignHeight="450"
 d:DesignWidth="800"
 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
 mc:Ignorable="d">

    <Grid>
        <ui:Button x:Name="but_Retour" Content="Retour" Margin="10,10,0,0" VerticalAlignment="Top" Click="but_Retour_Click"/>
        <DataGrid
x:Name="OrderVisuDG"
AutoGenerateColumns="False"
IsReadOnly="True"
ItemsSource="{Binding OrderedProducts}" Margin="0,85,0,102">
            <DataGrid.Columns>
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Product.ImagePath}"
        Header="Image" />
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Product.Code}"
        Header="Code produit" />
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Product.Name }"
        Header="Nom produit" />
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Product.SellingPrice, StringFormat={}{0:N2} € }"
        Header="Prix vente" />
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Quantity }"
        Header="Quantité" />
                <DataGridTextColumn
        Width="*"
        Binding="{Binding Price }"
        Header="Prix" />

            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <DatePicker x:Name="Picker_dateLivraison" HorizontalAlignment="Left" Margin="43,377,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lab_PxTotal" Content="Total: 1200€ HT" Margin="163,387,0,0" VerticalAlignment="Top" Height="25" Width="99"/>
            <Button x:Name="but_Supprimer" Content="Supprimer la commande" Margin="400,373,0,0" VerticalAlignment="Top" Width="181" Background="Red" Foreground="#E4FFFFFF"/>
        </StackPanel>
    </Grid>
</Page>
